<resources>
    <string name="app_name">Popular Movies</string>
    <string name="title_activity_settings">Settings</string>
    <string name="title_activity_detail">Detail</string>

    <!-- Put your api_key here -->
    <string name="api_key" translatable="false"></string>

    <!-- Strings related to Settings -->
    <string name="action_refresh" translatable="false">Refresh</string>
    <string name="action_settings" translatable="false">Settings</string>

    <!-- Title for sorting preference [CHAR LIMIT=30] -->
    <string name="pref_title_sort">Sort by</string>

    <!-- Key name for storing sort in SharedPreferences [CHAR LIMIT=NONE] -->
    <string name="pref_sort_key" translatable="false">sort</string>
    <string-array name="pref_sort_list_titles">
        <item>@string/pref_sort_label_popularity</item>
        <item>@string/pref_sort_label_rating</item>
    </string-array>
    <string-array name="pref_sort_list_values">
        <item>@string/pref_sort_popularity</item>
        <item>@string/pref_sort_rating</item>
    </string-array>

    <!-- Label for popularity option in Sorting preference [CHAR LIMIT=25] -->
    <string name="pref_sort_label_popularity">Most Popular</string>

    <!-- Label for rating option in Sorting preference [CHAR LIMIT=25] -->
    <string name="pref_sort_label_rating">Highest Rated</string>

    <!-- Value in SharedPreferences for sorting by popularity option [CHAR LIMIT=NONE] -->
    <string name="pref_sort_popularity" translatable="false">popularity.desc</string>

    <!-- Value in SharedPreferences for sorting by rating option [CHAR LIMIT=NONE] -->
    <string name="pref_sort_rating" translatable="false">vote_average.desc</string>

    <!-- Example settings for Data & Sync -->
    <string name="pref_header_data_sync">Data &amp; sync</string>

    <string name="pref_title_sync_frequency">Sync frequency</string>
    <string-array name="pref_sync_frequency_titles">
        <item>15 minutes</item>
        <item>30 minutes</item>
        <item>1 hour</item>
        <item>3 hours</item>
        <item>6 hours</item>
        <item>Never</item>
    </string-array>
    <string-array name="pref_sync_frequency_values">
        <item>15</item>
        <item>30</item>
        <item>60</item>
        <item>180</item>
        <item>360</item>
        <item>-1</item>
    </string-array>

    <string name="pref_title_system_sync_settings">System sync settings</string>

</resources>
